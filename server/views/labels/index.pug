extends ../layouts/application.pug

block content
  h1= t('layouts.application.labels')
  a.btn.btn-outline-primary(href=route('newLabel'))= t('views.labels.actions.create')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.actions.action')

    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td
            form(action=`/labels/${label.id}/edit`, method='get')
              input.btn.btn-outline-primary(type='submit' value=t('views.labels.actions.change'))
            +buttonTo(`/labels/${label.id}`, 'delete')(class="btn btn-danger" value=t('views.labels.actions.delete'))