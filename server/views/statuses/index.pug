extends ../layouts/application.pug

block content
  h1= t('layouts.application.statuses')
  a.btn.btn-outline-primary(href=route('newStatus'))= t('views.statuses.actions.create')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.actions.action')

    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td
            form(action= `/statuses/${status.id}/edit`, method='get')
              input.btn.btn-outline-primary(type='submit' value=t('views.statuses.actions.change'))
            +buttonTo(`/statuses/${status.id}`, 'delete')(class="btn btn-danger" value=t('views.statuses.actions.delete'))