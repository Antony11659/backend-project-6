extends ../layouts/application.pug

block content
  h1= t('views.tasks.actions.change')
    +formFor()(action=`/tasks/${task.id}` method='post')
      +input(task, 'name', t('views.tasks.new.value'))(type="text", value=task.name)
      +select(users, 'firstName','creatorId', t('views.tasks.new.creator'))
      +input(task, 'description', t('views.tasks.new.description'))(type='text',value=task.description)
      +select(statuses, 'name','statusId', t('views.tasks.new.status'), )
      +select(users, 'firstName','executorId', t('views.tasks.new.executor'),)
      +select(labels, 'name', 'labels', t('views.tasks.new.label'))
      +buttonTo(`/statuses/${task.id}`, 'patch')(class="btn btn-primary" value=t('views.tasks.actions.change'))